<div class="container-fluid">
	<div class="row col-md-12">
		<div class="row col-md-5">
			<div class="row col-md-12">
				{{input type="text" value=filterText placeholder=placeholder enter="clickItem" maxlength=50 minlength=threshold}}
			</div>

			<div class="row col-md-12">
				<ul class="list-group">
					{{#each item in listFiltered}}
						<li>
							<a class="list-group-item">
								<span {{action "clickItem" item}}>{{item.label}}</span>
								
								{{#if showArrows}}
									<span {{action "upItem" item}} class="glyphicon glyphicon-chevron-up"></span>
									<span {{action "downItem" item}} class="glyphicon glyphicon-chevron-down"></span>
								{{/if}}
							</a>
						</li>
					{{/each}}
				</ul>
			</div>
		</div>

		<div class="row col-md-5">
			<div class="row col-md-12">
				{{input type="text" value=filterTextSelect placeholder=placeholder enter="clickItemSelected" maxlength=50 minlength=threshold}}
			</div>

			<div class="row col-md-12">
				<ul class="list-group">
					{{#each item in listFilteredSelected}}
					  <li class="list-group-item">
								<span {{action "clickItem" item}}>{{item.label}}</span>

								{{#if showArrows}}
									<span {{action "upItem" item}} class="glyphicon glyphicon-chevron-up"></span>
									<span {{action "downItem" item}} class="glyphicon glyphicon-chevron-down"></span>
								{{/if}}
					  </li>
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
</div>
